{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Blazor App",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build",
          "program": "${workspaceFolder}/BlazorApp/bin/Debug/net6.0/BlazorApp.dll",
          "args": [],
          "cwd": "${workspaceFolder}/BlazorApp",
          "stopAtEntry": false,
          "serverReadyAction": {
              "action": "openExternally",
              "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
          },
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          },
          "sourceFileMap": {
              "/Views": "${workspaceFolder}/BlazorApp/Views"
          }
      },
      {
          "name": "Launch Internal API (GloboClimaAPI)",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build",
          "program": "${workspaceFolder}/GloboClimaAPI/bin/Debug/net6.0/GloboClimaAPI.dll",
          "args": [],
          "cwd": "${workspaceFolder}/GloboClimaAPI",
          "stopAtEntry": false,
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          }
      },
      {
          "name": "Launch Country Service Lambda",
          "type": "coreclr",
          "request": "launch",
          "program": "${workspaceFolder}/CountryService/src/bin/Debug/net6.0/CountryService.dll",
          "cwd": "${workspaceFolder}/CountryService/src",
          "stopAtEntry": false,
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          }
      },
      {
          "name": "Launch Country Service Lambda",
          "type": "coreclr",
          "request": "launch",
          "program": "${workspaceFolder}/CityService/src/bin/Debug/net6.0/CityService.dll",
          "cwd": "${workspaceFolder}/CityService/src",
          "stopAtEntry": false,
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          }
      },
      {
          "name": "Launch Country Service Lambda",
          "type": "coreclr",
          "request": "launch",
          "program": "${workspaceFolder}/WeatherService/src/bin/Debug/net6.0/WeatherService.dll",
          "cwd": "${workspaceFolder}/WeatherService/src",
          "stopAtEntry": false,
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          }
      }
  ],
  "compounds": [
      {
          "name": "Launch All Services",
          "configurations": [
              "Launch Blazor App",
              "Launch Internal API (GloboClimaAPI)",
              "Launch Country Service Lambda",
              "Launch City Service Lambda",
              "Launch Weather Service Lambda"
          ]
      }
  ]
}
